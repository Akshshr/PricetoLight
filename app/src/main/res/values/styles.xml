<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>

        <!--<item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>-->
        <!--<item name="android:windowLightNavigationBar">true</item>-->

        <!--<item name="android:navigationBarColor">@color/white100</item>-->
<!---->
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->

    </style>


    <!-- Starting activity theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_startup</item>
    </style>

    <style name="Button">
        <item name="android:theme">@style/AppTheme.Button</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:capitalize">words</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:paddingStart">@dimen/d32</item>
        <item name="android:paddingEnd">@dimen/d32</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:fontFamily">@font/googlesans_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.ButtonBright">
        <item name="android:paddingStart">@dimen/d32</item>
        <item name="android:paddingEnd">@dimen/d32</item>
        <item name="android:background">@drawable/bg_button_bright</item>
        <item name="android:fontFamily">@font/googlesans_bold</item>
        <item name="android:textColor">@color/gray700</item>
    </style>

    <style name="AppTheme.EditText" parent="@android:style/Widget.EditText">
        <item name="android:textAppearance">@style/Text.14spLight</item>
    </style>

    <style name="AppWidget">
    </style>

    <style name="AppWidget.EditText">
        <item name="android:theme">@style/AppTheme.EditText</item>
        <item name="android:textSize">@dimen/fontSize16</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
    </style>

    <style name="AppWidget.EditText.Solid">
        <item name="android:background">@drawable/bg_edittext_solid</item>
        <item name="android:padding">@dimen/d12</item>
    </style>



    <style name="AppWidget.Toolbar">
        <item name="android:theme">@style/AppTheme.Toolbar</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>



    <style name="AppTheme.Toolbar">
        <item name="android:textColorPrimary">@color/textPrimaryBright</item>
        <!-- Used in Theme.AppCompat -->
        <item name="android:textColorPrimaryInverse">@color/textPrimaryDark</item>
        <!-- Used in Theme.AppCompat.Light -->
        <item name="actionMenuTextColor">@color/textPrimaryBright</item>
        <item name="android:textColorSecondary">@color/textPrimaryBright</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

</resources>
